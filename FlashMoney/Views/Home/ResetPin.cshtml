@model FlashMoney.Models.ResetPinModel
@{
    ViewData["Title"] = "ResetPin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="ResetPin" asp-controller="Home" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OldPin"></label>
                <input asp-for="OldPin" class="form-control" />
                <span asp-validation-for="OldPin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPin"></label>
                <input asp-for="NewPin" class="form-control" />
                <span asp-validation-for="NewPin" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Phone" class="form-control" type="hidden" />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

