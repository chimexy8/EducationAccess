@model FlashMoney.Models.PinTransferModel
@{
    ViewData["Title"] = "PinTransfer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="PinTransfer" asp-controller="Transaction" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="SourcePhone" class="form-control" type="hidden" />
            </div>

            <div class="form-group">
                <input asp-for="DestinationPhone" class="form-control" type="hidden" />
            </div>

            <div class="form-group">
                <input asp-for="Amount" class="form-control" type="hidden" />
            </div>

            <div class="form-group">
                <input asp-for="Narration" class="form-control" type="hidden" />
            </div>

            <div class="form-group">
                <label asp-for="Pin"></label>
                <input asp-for="Pin" class="form-control" />
                <span asp-validation-for="Pin" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

