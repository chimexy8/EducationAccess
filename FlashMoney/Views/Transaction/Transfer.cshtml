@model FlashMoney.Models.TransactionModel
@{
    ViewData["Title"] = "Transfer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Transfer" asp-controller="Transaction" method="post">
         
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="SourcePhone" class="form-control" type="hidden" />
            </div>

            <div class="form-group">
                <label asp-for="DestinationPhone"></label>
                <input asp-for="DestinationPhone" class="form-control" />
                <span asp-validation-for="DestinationPhone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Amount"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Narration"></label>
                <input asp-for="Narration" class="form-control" />
                <span asp-validation-for="Narration" class="text-danger"></span>
            </div>

          
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

