@model FlashMoney.Models.AddCardModel
@{
    ViewData["Title"] = "AddCard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCard" asp-controller="Transaction" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Phone" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="Amount" class="form-control" type="hidden" value="2" />
            </div>

            <div class="form-group">
                <label asp-for="CardNumber"></label>
                <input asp-for="CardNumber" class="form-control" />
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CVV"></label>
                <input asp-for="CVV" class="form-control" />
                <span asp-validation-for="CVV" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ExpiryMonth"></label>
                <input asp-for="ExpiryMonth" class="form-control" />
                <span asp-validation-for="ExpiryMonth" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ExpiryYear"></label>
                <input asp-for="ExpiryYear" class="form-control" />
                <span asp-validation-for="ExpiryYear" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Pin"></label>
                <input asp-for="Pin" class="form-control" />
                <span asp-validation-for="Pin" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="CardHolder"></label>
                <input asp-for="CardHolder" class="form-control" />
                <span asp-validation-for="CardHolder" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
