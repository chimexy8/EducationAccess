@model FlashMoney.Models.PasswordChangeViewModel

    <div class="form-section loading">
        <div class="la-ball-pulse">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>

    <!-- Reset: New Password -->
    <div class="form-section reset-new-password active">
        <div class="head sub">
            <a asp-action="Reset" asp-controller="Auth" class="btn btn-link form-link" data-link="reset-phone">
                <i class="icon auto">
                    <svg width="16" height="15" viewBox="0 0 16 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M16 6.61564V8.42502H3.98955L9.49477 13.4055L8.08057 14.6849L0.161133 7.52033L8.08057 0.355713L9.49477 1.63513L3.98955 6.61564H16Z"
                              fill="#5D2684" />
                    </svg>
                </i>
            </a>
            <h4>Reset Password</h4>
        </div>

