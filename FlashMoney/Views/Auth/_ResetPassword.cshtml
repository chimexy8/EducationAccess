            <p>Enter new password for your account</p>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Phone" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="RCode" class="form-control" type="hidden" />
            </div>
            <div class="input with-icon password-check">
                <input asp-for="NewPassword" placeholder="New Password" />
