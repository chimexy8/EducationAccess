@model FlashMoney.Models.PinSignUpViewModel
@{
    ViewData["Title"] = "Pin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Pin" asp-controller="Auth" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="FirstName" class="form-control"  type="hidden"/>
            </div>

            <div class="form-group">
                <input asp-for="LastName" class="form-control"  type="hidden"/>
            </div>

            <div class="form-group">
                <input asp-for="DOB" class="form-control" value="@DateTime.Now"  type="hidden"/>
            </div>
            <div class="form-group">
                <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()"  style="visibility:hidden;"></select>
            </div>

            <div class="form-group">
                <input asp-for="Phone" class="form-control" type="hidden" />
            </div>


            <div class="form-group">
                <input asp-for="Password" class="form-control" type="hidden"/>
            </div>

            <div class="form-group">
                <label asp-for="Pin"></label>
                <input asp-for="Pin" class="form-control" />
                <span asp-validation-for="Pin" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

