<section class="content settings">
    <div class="contianer">
        <div class="card animated fadeInUp fast delay-1">
            <div class="row">
                <div class="col-sm-12 col-md-4">
                    <div class="category-cats">
                        <div class="category-nav-wrap">
                            <div class="category-nav">
                                <label>Profile</label>
                                <a class="item " asp-action="Index" asp-controller="Settings">
                                    <strong>Update Profile</strong>
                                    <p class="ellipsis">Change bio, name and other KYC info</p>
                                </a>
                                <a class="item " asp-action="Password" asp-controller="Settings">
                                    <strong>Change Password</strong>
                                    <p class="ellipsis">Update security by changing your password.</p>
                                </a>
                                <a class="item active" asp-action="AuthPin" asp-controller="Settings">
                                    <strong>Auth/USSD PIN</strong>
                                    <p class="ellipsis">4 digit PIN for transaction below 20k</p>
                                </a>
                                <a class="item" asp-action="TransactionPin" asp-controller="Settings">
                                    <strong>Transaction PIN </strong>
                                    <p class="ellipsis">4 digit PIN for transaction above 20k</p>
                                </a>
                                @*<a class="item no-outline" asp-action="TransactionPinn" asp-controller="Settings">
                                        <strong>Transaction PIN</strong>
                                        <p class="ellipsis">4 digit PIN for transaction above 20k</p>
                                    </a>*@

                                <label>Others</label>
                                <a class="item" asp-action="Notification" asp-controller="Settings">
                                    <strong>Notifcation & Alerts</strong>
                                    <p class="ellipsis">Configure how u want to recieve notifications</p>
                                </a>
                                <a class="item no-outline" asp-action="Support" asp-controller="Settings">
                                    <strong>Support</strong>
                                    <p class="ellipsis">Our contact informations and support channels</p>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="col-sm-12 col-md-8">
                    <div class="setting-content">







                        <!-- Auth / USSD PIN -->
                        <div class="setting-sect" id="setting-auth-pin">
                            <div class="head">
                                <h4>Auth / USSD PIN</h4>
                                <p>
                                    This allows you to send funds below 20k without the need of OTP or
                                    Transaction PIN. This can also be used on our USSD Channel
                                    <strong>*329#</strong>
                                </p>
                            </div>
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <h6 class="text-danger">@ViewData["UpdateState"]</h6>
                            <h6 class="text-success">@ViewData["UpdateStatus"]</h6>
                            <p class="text-danger invindicator"></p>
                            <form asp-action="AuthPin" id="setauthpin" asp-controller="Settings" method="post">
                                <div class="">
                                    @*<input asp-for="OldPin" placeholder="*" />*@
                                    <label>Current PIN</label>
                                    <div class="input-pin x4">
                                        <input asp-for="OldPin1" id="op1" type="text" placeholder="*" autocomplete=“off”/>
                                        <input asp-for="OldPin2" id="op2" type="text" placeholder="*" autocomplete=“off”/>
                                        <input asp-for="OldPin3" id="op3" type="text" placeholder="*" autocomplete=“off”/>
                                        <input asp-for="OldPin4" id="op4" type="text" placeholder="*" autocomplete=“off”/>
                                    </div>

                                   
                                </div>
                                <hr />
                                <div class="">
                                   
                                    <label>New PIN</label>
                                    <div class="input-pin x4">
                                        <input asp-for="NewPin1" id="np1" type="text" placeholder="*" autocomplete=“off”/>
                                        <input asp-for="NewPin2" id="np2" type="text" placeholder="*" autocomplete=“off”/>
                                        <input asp-for="NewPin3" id="np3" type="text" placeholder="*" autocomplete=“off”/>
                                        <input asp-for="NewPin4" id="np4" type="text" placeholder="*" autocomplete=“off”/>
                                    </div>

                                 
                                </div>
                               
                                    <label>Confirm New PIN</label>
                                    <div class="input-pin x4">
                                        <input asp-for="ConfirmNewPin1" id="cp1" type="text" placeholder="*" autocomplete=“off”/>
                                        <input asp-for="ConfirmNewPin2" id="cp2" type="text" placeholder="*" autocomplete=“off”/>
                                        <input asp-for="ConfirmNewPin3" id="cp3" type="text" placeholder="*" autocomplete=“off”/>
                                        <input asp-for="ConfirmNewPin4" id="cp4" type="text" placeholder="*" autocomplete=“off”/>
                                    </div>
                                   

                                <button type="submit" class="btn btn-primary">Update</button>
                            </form>
                        </div>

                    </div>
                    <!-- Loading -->
                    <div class="loading">
                        <div class="la-ball-pulse">
                            <div></div>
                            <div></div>
                            <div></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>