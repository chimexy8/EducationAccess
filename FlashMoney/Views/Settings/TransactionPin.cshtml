<section class="content settings">
    <div class="contianer">
        <div class="card animated fadeInUp fast delay-1">
            <div class="row">
                <div class="col-sm-12 col-md-4">
                    <div class="category-cats">
                        <div class="category-nav-wrap">
                            <div class="category-nav">
                                <label>Profile</label>
                                <a class="item " asp-action="Index" asp-controller="Settings">
                                    <strong>Update Profile</strong>
                                    <p class="ellipsis">Change bio, name and other KYC info</p>
                                </a>
                                <a class="item" asp-action="Password" asp-controller="Settings">
                                    <strong>Change Password</strong>
                                    <p class="ellipsis">Update security by changing your password.</p>
                                </a>
                                <a class="item" asp-action="AuthPin" asp-controller="Settings">
                                    <strong>Auth/USSD PIN</strong>
                                    <p class="ellipsis">4 digit PIN for transaction below 20k</p>
                                </a>
                                <a class="item active" asp-action="TransactionPin" asp-controller="Settings">
                                    <strong>Transaction PIN </strong>
                                    <p class="ellipsis">4 digit PIN for transaction above 20k</p>
                                </a>
                                @*<a class="item no-outline" asp-action="TransactionPinn" asp-controller="Settings">
                                        <strong>Transaction PIN</strong>
                                        <p class="ellipsis">4 digit PIN for transaction above 20k</p>
                                    </a>*@

                                <label>Others</label>
                                <a class="item" asp-action="Notification" asp-controller="Settings">
                                    <strong>Notifcation & Alerts</strong>
                                    <p class="ellipsis">Configure how u want to recieve notifications</p>
                                </a>
                                <a class="item no-outline" asp-action="Support" asp-controller="Settings">
                                    <strong>Support</strong>
                                    <p class="ellipsis">Our contact informations and support channels</p>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="col-sm-12 col-md-8">
                    <div class="setting-content">


                        @if (!Model.HasAuthPin)
	                    {
                            <div class="setting-sect" id="setting-transaction-no-pin">
                                <div class="head">
                                    <h4>Transaction PIN (Empty)</h4>
                                </div>
                                <div class="empty-info">
                                    <i class="icon auto">
                                        <svg width="50" height="55" viewBox="0 0 50 55" fill="none"
                                             xmlns="http://www.w3.org/2000/svg">
                                            <path d="M0.945312 8.87519L4.04379 5.79766L48.2554 50.0093L45.1779 53.1078L39.7074 47.6373C36.2996 50.8454 32.1773 53.2111 27.6331 54.3208C15.1141 51.2639 5.79764 38.6721 5.79764 25.2069V13.7275L0.945312 8.87519ZM27.6331 0.945312L49.4685 10.65V25.2069C49.4685 30.7371 47.8971 36.12 45.1776 40.7555L12.2184 7.79628L27.6331 0.945312Z"
                                                  fill="#FBB700" />
                                        </svg>
                                    </i>
                                    <p>
                                        You don’t have Authentication PIN set up yet? it is needed for transactions below 20000 and in combination with Transaction pin for
                                        transactions above 20000
                                    </p>

                                    <a class="btn btn-link" asp-action="AuthPin"
                               >
                                        <span>Set Up Now</span>
                                        <i class="icon auto">
                                            <svg width="6" height="9" viewBox="0 0 6 9" fill="none"
                                                 xmlns="http://www.w3.org/2000/svg">
                                                <path d="M0 7.93951L3.43952 4.50001L0 1.0605L1.0605 0L5.56052 4.50001L1.0605 9.00001L0 7.93951Z"
